# NPM Configuration for Phoenix Wallet

# Use public registry
registry=https://registry.npmjs.org/

# Automatically save exact versions (not ranges)
save-exact=false

# Save to dependencies (not devDependencies) by default
save=true

# Fail on missing peer dependencies
strict-peer-dependencies=false

# Enable package-lock
package-lock=true

# Access level for scoped packages
access=public

