{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@phoenix-wallet/core": [
        "../core/dist/esm/src"
      ]
    },
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
